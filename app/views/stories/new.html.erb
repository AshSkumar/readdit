<h1>Create a new post!</h1>

<%= form_for @story do |f| %>
  
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :url, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Create Post!", class: 'btn btn-primary' %>
  </div>
<% end %>